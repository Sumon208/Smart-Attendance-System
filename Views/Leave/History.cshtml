@model IEnumerable<Smart_Attendance_System.Models.Leave>

@{
    ViewData["Title"] = "Leave History";
    Layout = "_EmployeeLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-history text-primary"></i> Leave History</h2>
    <div>
        <a asp-action="Apply" class="btn btn-primary">
            <i class="fas fa-plus mr-2"></i>New Leave Request
        </a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Leave Type</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model)
        {
            <tr>
                <td>@leave.LeaveType</td>
                <td>@leave.StartDate.ToShortDateString()</td>
                <td>@leave.EndDate.ToShortDateString()</td>
                <td>
                    @if (leave.Status == LeaveStatus.Pending)
                    {
                        <span class="badge badge-warning">Pending</span>
                    }
                    else if (leave.Status == LeaveStatus.Approved)
                    {
                        <span class="badge badge-success">Approved</span>
                    }
                    else if (leave.Status == LeaveStatus.Rejected)
                    {
                        <span class="badge badge-danger">Rejected</span>
                    }
                </td>
                <td>
                    @if (leave.Status == LeaveStatus.Pending)
                    {
                        <a asp-action="Edit" asp-route-id="@leave.LeaveId" class="btn btn-sm btn-outline-primary mr-1">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <form asp-action="Delete" asp-route-id="@leave.LeaveId" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this leave request?');">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
