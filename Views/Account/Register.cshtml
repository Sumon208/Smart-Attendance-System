@model Smart_Attendance_System.Models.ViewModel.RegistrationViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<style>
    body {
        background: #f4f6f9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .register-section {
        display: flex;
        min-height: 100vh;
    }

    /* Left Side */
    .register-left {
        flex: 1;
        background: linear-gradient(135deg, #0d6efd, #0a58ca);
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .register-left::before {
            content: "";
            position: absolute;
            width: 120%;
            height: 120%;
            background: rgba(255,255,255,0.05);
            transform: rotate(25deg);
            top: -10%;
            left: -10%;
        }

        .register-left h1 {
            font-size: 2.5rem;
            font-weight: 700;
            z-index: 1;
        }

        .register-left p {
            font-size: 1.1rem;
            margin-top: 15px;
            z-index: 1;
        }

        .register-left img {
            max-width: 250px;
            margin-top: 30px;
            z-index: 1;
        }

    /* Right Side */
    .register-right {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 30px;
        background: #f4f6f9;
    }

    .register-card {
        width: 100%;
        max-width: 480px;
        background: #fff;
        border-radius: 15px;
        padding: 40px 30px;
        box-shadow: 0 12px 35px rgba(0,0,0,0.15);
        position: relative;
        overflow: hidden;
    }

        .register-card h2 {
            text-align: center;
            color: #0d6efd;
            font-weight: 700;
            margin-bottom: 35px;
        }

    .form-group {
        position: relative;
        margin-bottom: 25px;
    }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 14px 15px 14px 45px;
            border-radius: 8px;
            border: 1px solid #ced4da;
            transition: all 0.3s;
        }

            .form-group input:focus,
            .form-group select:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 10px rgba(13,110,253,0.2);
                outline: none;
            }

        .form-group i {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            color: #0d6efd;
            font-size: 16px;
        }

        /* Floating labels */
        .form-group input::placeholder {
            color: transparent;
        }

        .form-group input:placeholder-shown + label {
            top: 50%;
            left: 45px;
            transform: translateY(-50%);
            font-size: 14px;
            color: #aaa;
            transition: 0.3s;
            position: absolute;
            pointer-events: none;
        }

        .form-group input:focus + label,
        .form-group input:not(:placeholder-shown) + label {
            top: -10px;
            left: 40px;
            font-size: 12px;
            color: #0d6efd;
            background: #fff;
            padding: 0 5px;
        }

    .btn-register {
        width: 100%;
        padding: 14px;
        background: linear-gradient(90deg, #0d6efd, #0a58ca);
        border: none;
        border-radius: 8px;
        font-weight: 600;
        color: #fff;
        font-size: 16px;
        transition: 0.3s;
    }

        .btn-register:hover {
            background: linear-gradient(90deg, #0a58ca, #084298);
        }

    .text-center-link {
        text-align: center;
        margin-top: 20px;
        font-size: 0.9rem;
    }

        .text-center-link a {
            color: #0d6efd;
            text-decoration: none;
        }

            .text-center-link a:hover {
                text-decoration: underline;
            }

    #photoPreview {
        display: block;
        margin-top: 10px;
        max-width: 120px;
        border-radius: 8px;
    }

    @@media(max - width: 992px)

    {
        .register-section

    {
        flex-direction: column;
    }

    .register-left, .register-right {
        flex: unset;
        width: 100%;
    }

    .register-left {
        padding: 30px 20px;
    }

    }
</style>

<div class="register-section">
    <!-- Left Side -->
    <div class="register-left">
        <h1>Smart Attendance System</h1>
        <p>Efficiently manage employee attendance with ease and precision.</p>
        <img src="~/images/register-illustration.jpg" alt="Register Illustration" />
    </div>

    <!-- Right Side -->
    <div class="register-right">
        <div class="register-card">
            <h2>Create Account</h2>
            <form asp-action="Register" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <i class="fas fa-user"></i>
                    <input asp-for="EmployeeName" class="form-control" placeholder="Full Name" />
                    <label for="EmployeeName">Full Name</label>
                    <span asp-validation-for="EmployeeName" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <i class="fas fa-id-badge"></i>
                    <input asp-for="EmployeeId" class="form-control" placeholder="Employee ID" />
                    <label for="EmployeeId">Employee ID</label>
                    <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <i class="fas fa-envelope"></i>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                    <label for="Email">Email</label>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <i class="fas fa-lock"></i>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                    <label for="Password">Password</label>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <i class="fas fa-lock"></i>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                    <label for="ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <i class="fas fa-building"></i>
                    <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.Departments">
                        <option value="">Select Department</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                </div>

                <div class="form-group">
                    <label for="EmployeePhotoFile">Upload Photo</label>
                    <input type="file" name="EmployeePhotoFile" class="" accept="image/*" onchange="previewPhoto(event)" />
                    <img id="photoPreview" class="d-none" />
                </div>

                <div class="form-group">
                    <label for="CertificateFile">Upload Offer Letter</label>
                    <input type="file" name="CertificateFile" class="" accept=".pdf,.jpg,.jpeg,.png" />
                </div>

                <button type="submit" class="btn-register">Register</button>

                <div class="text-center-link">
                    <a asp-action="Login">Already have an account? Log in</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
