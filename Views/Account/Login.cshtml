@model Smart_Attendance_System.Models.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
    }

    .login-card {
        width: 100%;
        max-width: 400px;
        background-color: #fff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        text-align: center;
    }

        .login-card h2 {
            font-weight: 700;
            font-size: 2.2rem;
            color: #333;
            margin-bottom: 40px;
        }

    .form-group {
        text-align: left;
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: 500;
        color: #555;
        margin-bottom: 5px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px 12px 45px;
        border-radius: 10px;
        border: 1px solid #e0e0e0;
        font-size: 1rem;
        background-color: #f9f9f9;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #a6c1ee;
            outline: none;
            box-shadow: 0 0 0 3px rgba(166, 193, 238, 0.3);
        }

    .input-group {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #aaa;
    }

    .btn-gradient {
        width: 100%;
        padding: 15px;
        border: none;
        border-radius: 30px;
        font-weight: 600;
        font-size: 1.1rem;
        color: white;
        background: linear-gradient(to right, #6a11cb, #2575fc);
        cursor: pointer;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .btn-gradient:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }

    .forgot-password {
        display: block;
        text-align: right;
        font-size: 0.9rem;
        color: #555;
        margin-top: 10px;
        text-decoration: none;
        transition: color 0.3s;
    }

        .forgot-password:hover {
            color: #6a11cb;
        }

    .validation-message {
        font-size: 0.85rem;
        color: #e74c3c;
        margin-top: 5px;
        text-align: left;
    }

    .login-footer {
        margin-top: 20px;
        text-align: center;
    }

</style>

<div class="login-container">
    <div class="login-card">
        <h2>Login</h2>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-message"></div>

                    <div class="form-group">
                        <label for="Email" class="form-label">Username</label>
                        <div class="input-group">
                            <span class="input-icon">👤</span>
                            <input asp-for="Email" class="form-control" placeholder="Type your username" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger validation-message"></span>
                    </div>

                    <div class="form-group">
                        <label for="Password" class="form-label">Password</label>
                        <div class="input-group">
                            <span class="input-icon">🔒</span>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Type your password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger validation-message"></span>
                    </div>

                <!-- Remember Me + Forgot Password Row -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <!-- Left side: Remember Me -->
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe" />
                        <label for="rememberMe" class="form-check-label text-muted small">
                            Remember me
                        </label>
                    </div>

                    <!-- Right side: Forgot Password -->
                    <div>
                        <a asp-action="ForgotPassword" class="text-decoration-none text-primary small">
                            Forgot your password?
                        </a>
                    </div>
                </div>

            <button type="submit" class="btn-gradient mt-4">Login</button>

            <div class="login-footer">
                <a asp-action="Register" class="text-decoration-none">Don't have an account? <strong>Register here</strong></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
