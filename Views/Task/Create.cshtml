@model Smart_Attendance_System.Models.ViewModel.EmployeeTaskViewModel

@{
    ViewData["Title"] = "New Task";
    Layout = "_EmployeeLayout";
}

<div class="container-fluid py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <!-- Card Header -->
        <div class="card-header d-flex justify-content-between align-items-center rounded-top shadow-sm p-3"
             style="background: linear-gradient(90deg, #4e73df 0%, #224abe 100%); color: #fff;">
            <!-- Title with Icon -->
            <h3 class="mb-0 d-flex align-items-center fw-bold text-white">
                <i class="fas fa-tasks me-2"></i> New Task
            </h3>

            <!-- Back Button -->
            <a asp-action="Index"
               class="btn btn-light btn-sm shadow-sm d-flex align-items-center"
               style="transition: all 0.3s;">
                <i class="fas fa-arrow-left me-1"></i> Back
            </a>
        </div>


        <div class="card-body">
            <form asp-action="Create" method="post" class="row g-4">
                <input type="hidden" asp-for="SubmitDate" />
                <input asp-for="EmployeeId" type="hidden" value="@ViewBag.LoggedInEmployeeId" />

                <!-- Employee -->
                <input asp-for="EmployeeId" type="hidden" value="@ViewBag.LoggedInEmployeeId" />


                <!-- Project -->
                <div class="col-md-6 position-relative">
                    <label asp-for="ProjectId" class="form-label fw-semibold">Project</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text bg-primary text-white"><i class="fas fa-briefcase"></i></span>
                        <select asp-for="ProjectId" class="form-select" asp-items="Model.ProjectList">
                            <option value="">-- Select Project --</option>
                        </select>
                    </div>
                    <span asp-validation-for="ProjectId" class="text-danger"></span>
                </div>

                <!-- Shift -->
                <div class="col-md-6 position-relative">
                    <label asp-for="ShiftId" class="form-label fw-semibold">Shift</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text bg-primary text-white"><i class="fas fa-clock"></i></span>
                        <select asp-for="ShiftId" class="form-select" asp-items="Model.ShiftList">
                            <option value="">-- Select Shift --</option>
                        </select>
                    </div>
                    <span asp-validation-for="ShiftId" class="text-danger"></span>
                </div>

                <!-- Status -->
                <div class="col-md-6 position-relative">
                    <label asp-for="StatusId" class="form-label fw-semibold">Status</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text bg-primary text-white"><i class="fas fa-flag"></i></span>
                        <select asp-for="StatusId" class="form-select" asp-items="Model.StatusList">
                            <option value="">-- Select Status --</option>
                        </select>
                    </div>
                    <span asp-validation-for="StatusId" class="text-danger"></span>
                </div>

                <!-- Today's Activity -->
                <div class="col-12">
                    <label asp-for="TodaysActivity" class="form-label fw-semibold">Today's Activity</label>
                    <textarea asp-for="TodaysActivity" class="form-control shadow-sm rounded-3" rows="4" placeholder="Describe today's activity...">@Model?.TodaysActivity</textarea>
                    <span asp-validation-for="TodaysActivity" class="text-danger"></span>
                </div>

                <!-- Due Date -->
                <div class="col-md-6 position-relative">
                    <label asp-for="DueDate" class="form-label fw-semibold">Due Date</label>
                    <div class="input-group shadow-sm">
                        <span class="input-group-text bg-primary text-white"><i class="fas fa-calendar-alt"></i></span>
                        <input asp-for="DueDate" type="date" class="form-control" value="@(Model?.DueDate?.ToString("yyyy-MM-dd"))" />
                    </div>
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="col-12 d-flex justify-content-end gap-3 mt-4">
                    <button type="submit" class="btn btn-success btn-lg shadow-sm">
                        <i class="fas fa-save me-1"></i> Save Task
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
                        <i class="fas fa-times me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
