@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid p-0 bg-light text-dark">

    <!-- Hero Section (Empty but Stylish) -->
    <section class="hero-section py-5 d-flex justify-content-center align-items-center">
        <div class="text-center">
            <h2 class="display-5 fw-bold mb-3 text-primary">Welcome to Smart Attendance System</h2>
            <p class="lead mb-4 text-secondary">A modern solution to monitor and manage employee attendance efficiently.</p>
            <a href="#features" class="btn btn-primary btn-lg">Explore Features</a>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-5">
        <div class="container">
            <h2 class="text-center mb-5">Why Smart Attendance System?</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card p-4 rounded shadow-sm text-center h-100">
                        <i class="bi bi-speedometer2 display-4 text-info mb-3"></i>
                        <h4 class="fw-bold mb-2">Real-Time Tracking</h4>
                        <p>Instant updates and alerts for late or absent employees to keep productivity high.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-4 rounded shadow-sm text-center h-100">
                        <i class="bi bi-people-fill display-4 text-success mb-3"></i>
                        <h4 class="fw-bold mb-2">Employee Management</h4>
                        <p>Manage employees, roles, and departments efficiently with ease.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-4 rounded shadow-sm text-center h-100">
                        <i class="bi bi-bar-chart-fill display-4 text-warning mb-3"></i>
                        <h4 class="fw-bold mb-2">Reports & Analytics</h4>
                        <p>Generate detailed attendance reports and visualize trends for smarter decisions.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-5 text-center bg-primary text-light">
        <h3 class="mb-3">Ready to Simplify Attendance?</h3>
        <a href="/Account/Login" class="btn btn-light btn-lg">Get Started</a>
    </section>

    <!-- Footer -->
    <footer class="py-4 text-center text-dark border-top border-secondary">
        &copy; 2025 Smart Attendance Management System
    </footer>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f8f9fa;
    }

    .hero-section {
        background-color: #ffffff;
        min-height: 300px;
    }

    .card {
        background-color: #ffffff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 25px rgba(0,0,0,0.1);
        }

    .bg-primary {
        background: linear-gradient(90deg, #1a73e8, #4285f4);
    }

    .btn-primary {
        background: linear-gradient(90deg, #1a73e8, #4285f4);
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #4285f4, #1a73e8);
        }

    .btn-light {
        background: #ffffff;
        color: #1a73e8;
        border: 2px solid #ffffff;
    }

        .btn-light:hover {
            background: #f0f0f0;
            color: #1a73e8;
        }
</style>
