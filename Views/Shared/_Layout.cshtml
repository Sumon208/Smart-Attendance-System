@using System.Security.Claims
@{
    var employeeName = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name)?.Value;
    var employeeEmail = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Email)?.Value;
    var employeePhoto = User.Claims.FirstOrDefault(c => c.Type == "EmployeePhotoPath")?.Value ?? "/images/default-user.png";
}
@if (TempData["SuccessMessage"] != null)
{
    <script>
        window.onload = function () {
            alert("@TempData["SuccessMessage"]");
        };
    </script>
}

