@model Smart_Attendance_System.Models.Employee

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee - Smart Attendance System</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css" />
    <style>
        .sidebar {
            height: 100vh;
            background-color: #2c3e50;
            padding-top: 20px;
            color: white;
        }
        
        /* Responsive sidebar */
        @@media (max-width: 768px) {
            .sidebar {
                position: fixed;
                top: 0;
                left: -100%;
                width: 250px;
                z-index: 1000;
                transition: left 0.3s ease;
            }
            
            .sidebar.show {
                left: 0;
            }
            
            .main-content {
                margin-left: 0;
            }
        }
        .sidebar .nav-link {
            color: #ecf0f1;
            font-size: 1.1em;
            padding: 10px 15px;
            transition: all 0.3s ease;
        }
        .sidebar .nav-link:hover {
            color: #fff;
            background-color: #34495e;
            transform: translateX(5px);
        }
        .sidebar .nav-link.active {
            background-color: #3498db;
            color: #fff;
        }
        .main-content {
            padding: 20px;
            background-color: #f8f9fa;
            min-height: 100vh;
        }
        .card-custom {
            min-height: 150px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease;
        }
        .card-custom:hover {
            transform: translateY(-2px);
        }
        .user-info {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        .user-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #fff;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Mobile Menu Toggle -->
        <div class="d-md-none position-fixed top-0 start-0 p-3" style="z-index: 1001;">
            <button class="btn btn-primary" type="button" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>
        
        <!-- Mobile Overlay -->
        <div class="d-md-none position-fixed top-0 start-0 w-100 h-100 bg-dark" id="sidebarOverlay" style="z-index: 999; opacity: 0; visibility: hidden; transition: all 0.3s ease;"></div>
        
        <div class="row">
            <nav id="sidebar" class="col-md-2 col-lg-2 d-md-block sidebar">
                <div class="position-sticky pt-3">
                    <!-- User Info Section -->
                    <div class="user-info text-center">
                        <img src="/images/default_user.jpg" alt="User Avatar" class="user-avatar mb-2" />
                        <h6 class="text-white mb-1">@User.Identity?.Name</h6>
                        <small class="text-light">Employee</small>
                    </div>

                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Employee" asp-action="Dashboard">
                                <i class="fas fa-tachometer-alt mr-2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Attendance" asp-action="Attendance">
                                <i class="fas fa-clock mr-2"></i> Attendance
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Leave" asp-action="LeaveApply">
                                <i class="fas fa-calendar-plus mr-2"></i> Leave Apply
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Employee" asp-action="Profile">
                                <i class="fas fa-user mr-2"></i> Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Leave" asp-action="LeaveHistory">
                                <i class="fas fa-history mr-2"></i> Leave History
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Attendance" asp-action="AttendanceHistory">
                                <i class="fas fa-chart-bar mr-2"></i> Attendance History
                            </a>
                        </li>
                        <li class="nav-item mt-4">
                            <a class="nav-link text-warning" asp-controller="Account" asp-action="Logout">
                                <i class="fas fa-sign-out-alt mr-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-10 ml-sm-auto col-lg-10 px-md-4 main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap4.min.js"></script>
    <script>
        // Highlight active navigation item
        $(document).ready(function() {
            var currentPath = window.location.pathname;
            $('.nav-link').each(function() {
                var link = $(this).attr('href');
                if (link && currentPath.includes(link.split('/')[2])) {
                    $('.nav-link').removeClass('active');
                    $(this).addClass('active');
                }
            });
            
            // Mobile menu toggle
            $('#sidebarToggle').on('click', function() {
                $('#sidebar').toggleClass('show');
                if ($('#sidebar').hasClass('show')) {
                    $('#sidebarOverlay').css({opacity: 0.5, visibility: 'visible'});
                } else {
                    $('#sidebarOverlay').css({opacity: 0, visibility: 'hidden'});
                }
            });
            
            // Close sidebar when clicking overlay
            $('#sidebarOverlay').on('click', function() {
                $('#sidebar').removeClass('show');
                $(this).css({opacity: 0, visibility: 'hidden'});
            });
            
            // Close sidebar when clicking outside on mobile
            $(document).on('click', function(e) {
                if ($(window).width() <= 768) {
                    if (!$(e.target).closest('#sidebar, #sidebarToggle').length) {
                        $('#sidebar').removeClass('show');
                        $('#sidebarOverlay').css({opacity: 0, visibility: 'hidden'});
                    }
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
