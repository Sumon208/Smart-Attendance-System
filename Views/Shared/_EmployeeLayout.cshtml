@using Smart_Attendance_System.Models.ViewModel
@inject Smart_Attendance_System.Services.Interfaces.IAdminRepository AdminRepository

@{
    var userId = User.Claims.FirstOrDefault(c => c.Type == "EmployeeId")?.Value;
    EmployeeVM currentUser = null;
    if (!string.IsNullOrEmpty(userId))
    {
        currentUser = AdminRepository.GetEmployeeByIdByAsync(int.Parse(userId)).Result;
    }

    var employeeName = currentUser?.EmployeeName ?? User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Name)?.Value ?? "User";
    var employeeEmail = currentUser?.Email ?? User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Email)?.Value ?? "user@example.com";
    var employeePhoto = currentUser?.EmployeePhotoPath ?? User.Claims.FirstOrDefault(c => c.Type == "EmployeePhotoPath")?.Value ?? "/images/default-user.png";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee - Smart Attendance System</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            padding-top: 70px; /* Fixed navbar height adjust */
        }

        .sidebar {
            height: 100vh;
            background-color: #2c3e50;
            padding-top: 20px;
            color: white;
        }

        /* Responsive sidebar */
        @@media (max-width: 768px) {
            .sidebar {
                position: fixed;
                top: 0;
                left: -100%;
                width: 250px;
                z-index: 1000;
                transition: left 0.3s ease;
            }

                .sidebar.show {
                    left: 0;
                }

            .main-content {
                margin-left: 0;
            }
        }

        .sidebar .nav-link {
            color: #ecf0f1;
            font-size: 1.1em;
            padding: 10px 15px;
            transition: all 0.3s ease;
        }

            .sidebar .nav-link:hover {
                color: #fff;
                background-color: #34495e;
                transform: translateX(5px);
            }

            .sidebar .nav-link.active {
                background-color: #3498db;
                color: #fff;
            }

        .main-content {
            padding: 20px;
            background-color: #f8f9fa;
            min-height: 100vh;
        }

        /* Top navbar */
        .navbar-custom {
            background-color: #2c3e50 !important;
        }

        .user-box {
            display: flex;
            align-items: center;
            background-color: #34495e;
            padding: 6px 12px;
            border-radius: 8px;
            color: white;
        }

            .user-box img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                object-fit: cover;
                margin-right: 10px;
                border: 2px solid #e74c3c;
            }

        .user-info {
            line-height: 1.2;
        }

            .user-info .name {
                font-weight: bold;
            }

        .logout-btn {
            margin-left: 10px;
            background-color: #e74c3c;
            border: none;
            border-radius: 8px;
            padding: 8px 12px;
            color: #fff;
        }

            .logout-btn:hover {
                background-color: #c0392b;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Top Navbar -->
        <nav class="navbar navbar-expand-lg fixed-top shadow-sm navbar-custom">
            <button class="btn btn-primary d-md-none mr-2" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
            <div class="ml-auto d-flex align-items-center">
                <div class="user-box">
                    <img src="@employeePhoto" alt="User Avatar" />
                    <div class="user-info">
                        <div class="name">@employeeName</div>
                        <div class="email small">@employeeEmail</div>
                    </div>
                    <a asp-controller="Account" asp-action="Logout" class="logout-btn">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </nav>

        <!-- Mobile Overlay -->
        <div class="d-md-none position-fixed top-0 start-0 w-100 h-100 bg-dark" id="sidebarOverlay" style="z-index: 999; opacity: 0; visibility: hidden; transition: all 0.3s ease;"></div>

        <div class="row">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-2 col-lg-2 d-md-block sidebar">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Employee" asp-action="Dashboard">
                                <i class="fas fa-tachometer-alt mr-2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-controller="Employee" asp-action="Profile">
                                <i class="bi bi-person-circle me-2 fs-5"></i> Profile
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Attendance" asp-action="Attendance">
                                <i class="fas fa-clock mr-2"></i> Attendance
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Leave" asp-action="LeaveApply">
                                <i class="fas fa-calendar-plus mr-2"></i> Leave Apply
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Leave" asp-action="LeaveHistory">
                                <i class="fas fa-history mr-2"></i> Leave History
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Attendance" asp-action="AttendanceHistory">
                                <i class="fas fa-chart-bar mr-2"></i> Attendance History
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-10 ml-sm-auto col-lg-10 px-md-4 main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        // Highlight active nav item
        $(document).ready(function () {
            var currentPath = window.location.pathname;
            $('.nav-link').each(function () {
                var link = $(this).attr('href');
                if (link && currentPath.includes(link.split('/')[2])) {
                    $('.nav-link').removeClass('active');
                    $(this).addClass('active');
                }
            });

            // Mobile menu toggle
            $('#sidebarToggle').on('click', function () {
                $('#sidebar').toggleClass('show');
                if ($('#sidebar').hasClass('show')) {
                    $('#sidebarOverlay').css({ opacity: 0.5, visibility: 'visible' });
                } else {
                    $('#sidebarOverlay').css({ opacity: 0, visibility: 'hidden' });
                }
            });

            // Close sidebar when clicking overlay
            $('#sidebarOverlay').on('click', function () {
                $('#sidebar').removeClass('show');
                $(this).css({ opacity: 0, visibility: 'hidden' });
            });

            // Close sidebar when clicking outside on mobile
            $(document).on('click', function (e) {
                if ($(window).width() <= 768) {
                    if (!$(e.target).closest('#sidebar, #sidebarToggle').length) {
                        $('#sidebar').removeClass('show');
                        $('#sidebarOverlay').css({ opacity: 0, visibility: 'hidden' });
                    }
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
