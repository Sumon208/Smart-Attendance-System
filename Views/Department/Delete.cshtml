@model Smart_Attendance_System.Models.Department

@{
    ViewData["Title"] = "Delete Department";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Delete Department</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Warning!</h5>
                        <p>You are about to delete the department "<strong>@Model.DepartmentName</strong>". This action cannot be undone.</p>
                        <hr>
                        <p class="mb-0">Please make sure this department has no associated employees before proceeding.</p>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 fw-bold">Department ID:</dt>
                                <dd class="col-sm-8">@Model.DepartmentId</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 fw-bold">Department Name:</dt>
                                <dd class="col-sm-8">@Model.DepartmentName</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="DepartmentId" />
                        
                        <div class="d-flex gap-2 justify-content-center">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="fas fa-trash"></i> Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.DepartmentId" class="btn btn-info btn-lg">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


