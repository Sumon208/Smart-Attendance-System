@model IEnumerable<Smart_Attendance_System.Models.Leave>

@{
    ViewData["Title"] = "Leave Management";
    Layout = "_AdminLayout";
}

<h2>Leave Applications</h2>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Employee Name</th>
            <th>Leave Type</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Employee.EmployeeName</td>
                <td>@item.LeaveType</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>
                    <span class="badge @(item.Status == LeaveStatus.Approved ? "badge-success" : item.Status == LeaveStatus.Rejected ? "badge-danger" : "badge-warning")">
                        @item.Status
                    </span>
                </td>
                <td>
                    @if (item.Status == LeaveStatus.Pending)
                    {
                        <form asp-action="UpdateLeaveStatus" method="post" style="display:inline;">
                            <input type="hidden" name="leaveId" value="@item.LeaveId" />
                            <input type="hidden" name="status" value="@((int)LeaveStatus.Approved)" />
                            <button type="submit" class="btn btn-sm btn-success">Approve</button>
                        </form>
                        <form asp-action="UpdateLeaveStatus" method="post" style="display:inline;">
                            <input type="hidden" name="leaveId" value="@item.LeaveId" />
                            <input type="hidden" name="status" value="@((int)LeaveStatus.Rejected)" />
                            <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>