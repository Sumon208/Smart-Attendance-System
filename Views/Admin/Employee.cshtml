@model IEnumerable<Smart_Attendance_System.Models.Employee>

@{
    ViewData["Title"] = "Employee Management";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Employee Management</h2>
    <a asp-action="AddEmployee" class="btn btn-primary">Add New Employee</a>
</div>

<!-- Success message in red -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Department</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeId</td>
                <td>@item.EmployeeName</td>
                <td>@item.Department?.DepartmentName</td>
                <td>@item.Salary?.ToString("C")</td>
                <td>
                    <a asp-action="EditEmployee" asp-route-employeeId="@item.EmployeeId" class="btn btn-sm btn-info">Edit</a>
                    <a href="@Url.Action("DeleteEmployee", "Admin", new { employeeId = item.EmployeeId })"
                       class="btn btn-sm btn-danger delete-btn">
                        Delete
                    </a>
                    <a asp-action="EmployeeAttendanceDetails" asp-route-employeeId="@item.EmployeeId" class="btn btn-sm btn-secondary">Attendance</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const deleteButtons = document.querySelectorAll(".delete-btn");

            deleteButtons.forEach(btn => {
                btn.addEventListener("click", function (e) {
                    e.preventDefault(); // Stop default navigation
                    const confirmed = confirm("Are you sure you want to delete this employee?");
                    if (confirmed) {
                        window.location.href = this.href; // Proceed to delete
                    }
                });
            });
        });
    </script>
}
