@model Smart_Attendance_System.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
    Layout = "_AdminLayout";
}

<h2 class="mb-4">Delete Employee</h2>

<div class="alert alert-danger" role="alert">
    Are you sure you want to delete the employee "@Model.EmployeeName" with ID "@Model.EmployeeId"?
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Details" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}